---
import AboutNW from "../components/AboutNW.astro";
import ProfileNW from "../components/ProfileNW.astro";
import CVCard from "../components/CVCard.astro";
---

<div class="about-me-container" id="about-me">
  <div class="web-pattern top-left"></div>
  <div class="web-pattern bottom-right"></div>
  
  <div class="glow-circle"></div>
  
  <h1>Sobre MÃ­</h1>
  <div class="content-wrapper">
    <ProfileNW />
    <AboutNW />
    <CVCard />
  </div>
</div>

<style>
  @keyframes pulse {
    0% { opacity: 0.7; transform: scale(1); }
    50% { opacity: 0.9; transform: scale(1.05); }
    100% { opacity: 0.7; transform: scale(1); }
  }
  
  @keyframes float {
    0% { transform: translateY(0px); }
    50% { transform: translateY(-20px); }
    100% { transform: translateY(0px); }
  }
  
  @keyframes rotate {
    0% { transform: rotate(0deg); }
    100% { transform: rotate(360deg); }
  }
  
  .about-me-container {
    color: white;
    display: flex;
    justify-content: center;
    flex-wrap: wrap;
    min-height: 100vh;
    align-content: center;
    background: linear-gradient(135deg, #001440 0%, #0a2472 50%, #001440 100%);
    overflow: hidden;
    row-gap: 20px;
    column-gap: 40px;
    position: relative;
    padding: 2rem;
    perspective: 1000px;
    
    &::before {
      content: "";
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      height: 4px;
      background: linear-gradient(90deg, transparent, #e61919, #e61919, transparent);
      z-index: 10;
    }
    
    &::after {
      content: "";
      position: absolute;
      bottom: 0;
      left: 0;
      right: 0;
      height: 4px;
      background: linear-gradient(90deg, transparent, #e61919, #e61919, transparent);
      z-index: 10;
    }
  }
  
  .content-wrapper {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 40px;
    width: 100%;
    z-index: 2;
    
  }
  
  h1 {
    width: 100%;
    text-align: center;
    font-size: 3.5rem;
    font-weight: 800;
    margin-bottom: 2rem;
    text-transform: uppercase;
    letter-spacing: 4px;
    color: transparent;
    background: linear-gradient(135deg, #ffffff 0%, #66ccff 50%, #ffffff 100%);
    -webkit-background-clip: text;
    background-clip: text;
    text-shadow: 0 0 15px rgba(102, 204, 255, 0.5);
    position: relative;
    z-index: 2;
    animation: float 6s ease-in-out infinite;
    
    &::after {
      content: "2099";
      position: absolute;
      bottom: -15px;
      right: 20%;
      font-size: 1rem;
      color: #e61919;
      letter-spacing: 1px;
      text-shadow: 0 0 10px rgba(230, 25, 25, 0.8);
    }
  }
  
  .web-pattern {
    position: absolute;
    width: 300px;
    height: 300px;
    background-image: radial-gradient(circle, rgba(255,255,255,0.1) 1px, transparent 1px);
    background-size: 30px 30px;
    z-index: 1;
    opacity: 0.5;
    
    &.top-left {
      top: -50px;
      left: -50px;
      transform: rotate(15deg);
    }
    
    &.bottom-right {
      bottom: -50px;
      right: -50px;
      transform: rotate(-15deg);
    }
  }
  
  .glow-circle {
    position: absolute;
    width: 500px;
    height: 500px;
    border-radius: 50%;
    background: radial-gradient(circle, rgba(230, 25, 25, 0.2) 0%, rgba(10, 36, 114, 0) 70%);
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    z-index: 1;
    animation: pulse 8s infinite ease-in-out;
    pointer-events: none;
  }
  
  @media (max-width: 768px) {
    .about-me-container {
      padding: 1rem;
    }
    
    h1 {
      font-size: 2.5rem;
    }
    
    .content-wrapper {
      gap: 20px;
    }
  }
</style>

