---
// TopBar.astro
---

<div class="top-bar" id="topBar">
  <div class="tech-grid"></div>
  <div class="top-bar-left">
    <div class="logo-container">
      <img src="favicon.ico" alt="logo" />
      <div class="logo-glow"></div>
    </div>
  </div>
  <div class="top-bar-content">
    <a href="#projects" class="nav-link">
      <span class="nav-text">Proyectos</span>
      <span class="nav-hover-effect"></span>
    </a>
    <a href="#languages" class="nav-link">
      <span class="nav-text">Tecnologías</span>
      <span class="nav-hover-effect"></span>
    </a>
    <a href="#about-me" class="nav-link">
      <span class="nav-text">Sobre Mí</span>
      <span class="nav-hover-effect"></span>
    </a>
  </div>
  <div class="top-bar-right">
    <span id="mobile-menu-case" class="material-symbols-outlined"> menu </span>
  </div>
</div>

<!-- Menú móvil real -->
<div class="mobile-menu" id="mobileMenu">
  <div class="mobile-menu-content">
    <a href="#projects" class="mobile-link">Proyectos</a>
    <a href="#languages" class="mobile-link">Tecnologías</a>
    <a href="#about-me" class="mobile-link">Sobre Mí</a>
  </div>
</div>

<script>
  import { handleScroll } from "./handle-scroll";
  
  // Script para manejar el cambio de apariencia al hacer scroll
  const topBar = document.getElementById('topBar');
  const mobileMenuBtn = document.getElementById('mobile-menu-case');
  const mobileMenu = document.getElementById('mobileMenu');
  let isMenuOpen = false;
  
  // Inicializar y agregar event listener
  window.addEventListener('scroll', () => handleScroll(topBar));
  
  // Verificar la posición inicial del scroll
  handleScroll(topBar);
  
  // Función para cerrar el menú
  const closeMenu = () => {
    isMenuOpen = false;
    document.body.classList.remove('menu-open');
    mobileMenu?.classList.remove('active');
    if (mobileMenuBtn) mobileMenuBtn.textContent = "menu";
  };

  // Manejar el menú móvil
  if (mobileMenuBtn) {
    mobileMenuBtn.addEventListener('click', () => {
      isMenuOpen = !isMenuOpen;
      if (isMenuOpen) {
        document.body.classList.add('menu-open');
        mobileMenu?.classList.add('active');
        mobileMenuBtn.textContent = "close";
      } else {
        closeMenu();
      }
    });
  }

  // Lógica de Scroll Suave sin cambiar URL (Hash)
  document.addEventListener('DOMContentLoaded', () => {
    // Seleccionar todos los enlaces que apuntan a una sección interna (empiezan con #)
    const links = document.querySelectorAll('a[href^="#"]');
    
    links.forEach(link => {
      link.addEventListener('click', (e) => {
        e.preventDefault(); // Prevenir el cambio de URL
        
        const targetId = link.getAttribute('href');
        if (targetId && targetId !== '#') {
          const targetElement = document.querySelector(targetId);
          if (targetElement) {
            // Cerrar menú móvil si está abierto
            closeMenu();
            
            // Hacer scroll suave
            targetElement.scrollIntoView({
              behavior: 'smooth',
              block: 'start'
            });
          }
        }
      });
    });
  });
  
  // Efecto de hover para los enlaces de navegación desktop
  const navLinks = document.querySelectorAll('.nav-link');
  navLinks.forEach(link => {
    link.addEventListener('mouseenter', () => {
      const hoverEffect = link.querySelector('.nav-hover-effect');
      if (hoverEffect) {
        (hoverEffect as HTMLElement).style.width = '100%';
        (hoverEffect as HTMLElement).style.opacity = '1';
      }
    });
    
    link.addEventListener('mouseleave', () => {
      const hoverEffect = link.querySelector('.nav-hover-effect');
      if (hoverEffect) {
        (hoverEffect as HTMLElement).style.width = '0';
        (hoverEffect as HTMLElement).style.opacity = '0';
      }
    });
  });
</script>

<style>
  @keyframes accentPulse {
    0% { opacity: 0.5; }
    50% { opacity: 1; }
    100% { opacity: 0.5; }
  }
  
  @keyframes logoGlow {
    0%, 100% { 
      opacity: 0.7;
      box-shadow: 0 0 10px rgba(102, 204, 255, 0.5);
    }
    50% { 
      opacity: 1;
      box-shadow: 0 0 20px rgba(230, 25, 25, 0.7);
    }
  }
  
  @keyframes gridMove {
    0% { background-position: 0 0; }
    100% { background-position: 50px 50px; }
  }
  
  .top-bar {
    position: fixed;
    top: 0;
    width: 100%;
    display: flex;
    height: 70px;
    align-items: center;
    justify-content: space-around;
    z-index: 10;
    background: rgba(0, 10, 30, 0.2);
    backdrop-filter: blur(10px);
    transition: all 0.4s cubic-bezier(0.16, 1, 0.3, 1);
    overflow: hidden;
  }
  
  .tech-grid {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-image: 
      linear-gradient(90deg, rgba(102, 204, 255, 0.1) 1px, transparent 1px),
      linear-gradient(0deg, rgba(102, 204, 255, 0.1) 1px, transparent 1px);
    background-size: 20px 20px;
    opacity: 0.3;
    z-index: -1;
    animation: gridMove 20s linear infinite;
    pointer-events: none;
  }
  
  /* Clases que se aplican al hacer scroll */
  .top-bar.scrolled2 {
    background: linear-gradient(to right, rgba(0, 20, 64, 0.9), rgba(10, 36, 114, 0.9), rgba(230, 25, 25, 0.8));
    height: 75px;
    box-shadow: 0 5px 25px rgba(0, 0, 0, 0.3);
  }
  
  .top-bar.scrolled {
    background: rgba(7, 5, 40, 0.95);
    height: 65px;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.25);
  }
  
  .top-bar.scrolled1 {
    background: rgba(0, 10, 30, 0.7);
    height: 60px;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
  }
  
  .top-bar-content {
    width: 40%;
    display: flex;
    justify-content: space-around;
    position: relative;
    z-index: 2;
  }
  
  .nav-link {
    color: white;
    font-weight: 600;
    text-decoration: none;
    position: relative;
    padding: 0.5rem 1rem;
    transition: all 0.3s ease;
    overflow: hidden;
    display: flex;
    flex-direction: column;
    align-items: center;
  }
  
  .nav-text {
    position: relative;
    z-index: 2;
    transition: transform 0.3s ease, text-shadow 0.3s ease;
  }
  
  .nav-link:hover .nav-text {
    transform: translateY(-2px);
    text-shadow: 0 0 10px rgba(102, 204, 255, 0.7);
  }
  
  .nav-hover-effect {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 0;
    height: 2px;
    background: linear-gradient(90deg, #e61919, #66ccff);
    transition: width 0.3s ease, opacity 0.3s ease;
    opacity: 0;
    box-shadow: 0 0 10px rgba(230, 25, 25, 0.5);
  }
  
  .top-bar-left {
    width: 20%;
    height: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
  }
  
  .logo-container {
    position: relative;
    height: 80%;
    display: flex;
    justify-content: center;
    align-items: center;
  }
  
  .top-bar-left img {
    height: 100%;
    transition: transform 0.3s ease;
    position: relative;
    z-index: 2;
    filter: drop-shadow(0 0 5px rgba(102, 204, 255, 0.3));
  }
  
  .logo-glow {
    position: absolute;
    width: 100%;
    height: 100%;
    border-radius: 50%;
    background: radial-gradient(circle, rgba(230, 25, 25, 0.3) 0%, rgba(102, 204, 255, 0.2) 50%, transparent 70%);
    filter: blur(8px);
    z-index: 1;
    animation: logoGlow 4s infinite ease-in-out;
  }
  
  /* Reducción sutil del logo al hacer scroll */
  .top-bar.scrolled .top-bar-left img {
    transform: scale(0.9);
  }
  
  .top-bar-right {
    width: 20%;
    height: 100%;
    display: none; /* Oculto por defecto en desktop */
    justify-content: center;
    align-items: center;
  }
  
  .top-bar-right span {
    color: white;
    font-size: 1.8rem;
    cursor: pointer;
    transition: all 0.3s ease;
    background: rgba(0, 10, 30, 0.3);
    border-radius: 50%;
    width: 40px;
    height: 40px;
    display: flex;
    align-items: center;
    justify-content: center;
    border: 1px solid rgba(102, 204, 255, 0.3);
  }
  
  .top-bar-right span:hover {
    color: #e61919;
    transform: scale(1.1);
    box-shadow: 0 0 15px rgba(230, 25, 25, 0.5);
    border-color: rgba(230, 25, 25, 0.5);
  }

  /* Estilos del menú móvil overlay */
  .mobile-menu {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100vh;
    background: rgba(0, 10, 30, 0.95);
    backdrop-filter: blur(20px);
    z-index: 9;
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0;
    pointer-events: none;
    transition: opacity 0.3s ease;
  }

  .mobile-menu.active {
    opacity: 1;
    pointer-events: all;
  }

  .mobile-menu-content {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 2rem;
  }

  .mobile-link {
    font-size: 2rem;
    font-weight: 700;
    color: white;
    text-decoration: none;
    position: relative;
    padding: 0.5rem 1rem;
    overflow: hidden;
    transition: color 0.3s ease;
  }

  .mobile-link:hover {
    color: #66ccff;
    text-shadow: 0 0 15px rgba(102, 204, 255, 0.5);
  }
  
  /* Media queries para responsive */
  @media (max-width: 768px) {
    .top-bar-content {
      display: none;
    }

    .top-bar-right {
      display: flex; /* Mostrar solo en móvil */
    }
    
    .top-bar-left, .top-bar-right {
      width: 50%;
    }
    
    .top-bar-left {
      justify-content: flex-start;
      padding-left: 1.5rem;
    }
    
    .top-bar-right {
      justify-content: flex-end;
      padding-right: 1.5rem;
    }
  }
  
  /* Animación de entrada para la barra al cargar la página */
  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(-10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  
  .top-bar {
    animation: fadeIn 0.5s ease-out forwards;
  }
</style>